{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for all windows",
  "windows": [
    "*"
  ],
  "permissions": [
    "core:window:default",
    "core:window:allow-show",
    "core:event:default",
    "window-state:default",
    "opener:default",
    "core:app:allow-version",
    "fs:default",
    "dialog:default",
    "shell:allow-open",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "sh", "cmd": "sh", "args": true },
        { "name": "bash", "cmd": "bash", "args": true },
        { "name": "zsh", "cmd": "zsh", "args": true },
        { "name": "cmd", "cmd": "cmd", "args": true },
        { "name": "open", "cmd": "open", "args": true },
        { "name": "xdg-open", "cmd": "xdg-open", "args": true },
        { "name": "explorer", "cmd": "explorer", "args": true }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "**" }]
    }
  ]
}